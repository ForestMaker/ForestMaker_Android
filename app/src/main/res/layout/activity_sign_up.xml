<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="35dp"
    tools:context=".ui.Sign.SignUpActivity">

    <ImageView
        android:id="@+id/act_signup_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/act_signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_logo"
        app:layout_constraintStart_toStartOf="@+id/act_signup_logo"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_logo" />

    <EditText
        android:id="@+id/act_signup_edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="아이디"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_text" />

    <EditText
        android:id="@+id/act_signup_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="이메일"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_id"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_id" />

    <EditText
        android:id="@+id/act_signup_edit_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="비밀번호(8-12자리/숫자, 특수문자 조합)"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_email"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_email" />

    <EditText
        android:id="@+id/act_signup_edit_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="비밀번호 확인"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_password1"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_password1"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_password1" />

    <Button
        android:id="@+id/act_signup_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_box_green_72"
        android:paddingVertical="12dp"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_password2" />

</androidx.constraintlayout.widget.ConstraintLayout>