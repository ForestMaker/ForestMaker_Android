<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.reserve.Experience.ExperienceActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/act_experience_btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/icon_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/apple_sd_gothic_neo_m"
                    android:text="체험하기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/act_experience_btn_back"
                    app:layout_constraintStart_toEndOf="@+id/act_experience_btn_back"
                    app:layout_constraintTop_toTopOf="@+id/act_experience_btn_back" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/act_experience_layout_forestSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/act_experience_txt_forestSchool_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:lineSpacingExtra="3sp"
                    android:text="우리 숲에 살고 있는 동물과 식물 소개"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/act_experience_txt_forestSchool_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="춘천 신북 유포 산52-11"
                    android:textColor="@color/brownish_grey"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/act_experience_forestSchool_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영 시간 : "
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/act_experience_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00 ~ 18:00"
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="체험 시간 : "
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/act_experience_runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60분 이내 / 1회"
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="체험 대상 : "
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/act_experience_participants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6세 ~ 8세 어린이 참여 가능"
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비용 : "
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/act_experience_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2만원"
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/act_experience_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2만원"
                            android:fontFamily="@font/notosans_regular"
                            android:lineSpacingExtra="5sp"
                            android:textColor="@color/brownish_grey"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/act_experience_btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="예약"
                    android:paddingVertical="12dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_box_green_72"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>