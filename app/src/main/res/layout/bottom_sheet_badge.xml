<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_badge"
    android:clickable="false"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/round_top_white_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_close"
            android:layout_gravity="end"/>

        <ImageView
            android:id="@+id/bottom_sheet_badge_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_badge_active_1"/>

        <TextView
            android:id="@+id/bottom_sheet_badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/notosans_regular"
            android:textSize="18sp"
            android:textColor="#4e4e4e"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:text="첫 식목"/>


        <TextView
            android:id="@+id/bottom_sheet_badge_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="90dp"
            android:fontFamily="@font/notosans_regular"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#4e4e4e"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:text="@string/badge1"/>
    </LinearLayout>

</LinearLayout>