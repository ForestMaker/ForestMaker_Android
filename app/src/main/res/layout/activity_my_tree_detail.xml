<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Home.MyTreeDetailActivity">

    <ImageView
        android:id="@+id/act_mytree_detail_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_tree"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/act_mytree_detail_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/act_mytree_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/act_mytree_detail_img" />

    <TextView
        android:id="@+id/act_mytree_detail_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/act_mytree_detail_txt_name"
        app:layout_constraintTop_toTopOf="@+id/act_mytree_detail_txt_name" />

    <TextView
        android:id="@+id/act_mytree_detail_txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/act_mytree_detail_txt_date"
        app:layout_constraintTop_toTopOf="@+id/act_mytree_detail_txt_name" />

</androidx.constraintlayout.widget.ConstraintLayout>