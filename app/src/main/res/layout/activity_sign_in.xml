<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Sign.SignInActivity">

    <ImageView
        android:id="@+id/act_signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/act_signin_edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="230dp"
        android:hint="아이디"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_logo" />

    <EditText
        android:id="@+id/act_signin_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="25dp"
        android:hint="비밀번호(8자리 이상 /영어, 숫자, 특수문자 필수)"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signin_edit_id"
        app:layout_constraintStart_toStartOf="@+id/act_signin_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_edit_id" />

    <ImageView
        android:id="@+id/act_signin_btn_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/selector_onboard_indicator"
        app:layout_constraintStart_toStartOf="@+id/act_signin_edit_password"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_edit_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="로그인 상태 유지"
        android:textColor="@color/greyish_brown"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/act_signin_btn_status"
        app:layout_constraintStart_toEndOf="@+id/act_signin_btn_status"
        app:layout_constraintTop_toTopOf="@+id/act_signin_btn_status" />

    <Button
        android:id="@+id/act_signin_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_btn_ocean_green_72"
        android:paddingVertical="12dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_edit_password" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_btn_signin">


        <TextView
            android:id="@+id/act_signin_btn_go_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/brown_grey2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/act_signin_btn_go_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호 찾기"
            android:textColor="@color/brown_grey2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>