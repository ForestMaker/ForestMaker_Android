<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="마곡나루역 근처 나무 "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_location_bar"/>

    <TextView
        android:id="@+id/item_txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ㅜ소주소 - 1231 "
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_txt_name"
        app:layout_constraintEnd_toStartOf="@+id/item_btn_delete"
        app:layout_constraintTop_toTopOf="@+id/item_txt_name" />

    <TextView
        android:id="@+id/item_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_stroke_red_1_72"
        android:paddingHorizontal="25dp"
        android:paddingVertical="4dp"
        android:text="삭제"
        android:fontFamily="@font/nanumsquare_bold"
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#fc3939"
        android:lineSpacingExtra="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/item_location_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_txt_name" />

</androidx.constraintlayout.widget.ConstraintLayout>