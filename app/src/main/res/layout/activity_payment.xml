<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.reserve.Store.PaymentActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/act_payment_btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/icon_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/notosans_regular"
                    android:text="상점"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/act_payment_btn_back"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:background="@drawable/round_stroke_light_grey_1_13"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문자 정보"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="홍길동"
                    android:fontFamily="@font/notosans_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="010-0000-0000"
                    android:fontFamily="@font/notosans_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="194928392992@naver.com"
                    android:fontFamily="@font/notosans_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:background="@drawable/round_stroke_light_grey_1_13"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 항목"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/act_payment_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="15dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="40dp"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:text="총 주문금액"
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>

                        <TextView
                            android:id="@+id/act_payment_txt_totalPrice"
                            android:layout_gravity="right"
                            android:text="14,500"
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:text="에코 마일리지"
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>

                        <TextView
                            android:layout_gravity="right"
                            android:text="+100P"
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>

                    </TableRow>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >


                        <TextView
                            android:text=""
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>

                        <TextView
                            android:layout_gravity="right"
                            android:text="14,600"
                            android:fontFamily="@font/notosans_regular"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="5sp"/>
                    </TableRow>

                </TableLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:background="@drawable/round_stroke_light_grey_1_13"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/act_payment_txt_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="결제 수단"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/act_payment_btn_pay_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_payment_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/act_payment_btn_pay_transfer"
                    app:layout_constraintTop_toBottomOf="@+id/act_payment_txt_payment" />

                <ImageView
                    android:id="@+id/act_payment_btn_pay_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_payment_transfer"
                    app:layout_constraintStart_toEndOf="@+id/act_payment_btn_pay_card"
                    app:layout_constraintEnd_toStartOf="@+id/act_payment_btn_pay_easypay"
                    app:layout_constraintTop_toTopOf="@+id/act_payment_btn_pay_card" />

                <ImageView
                    android:id="@+id/act_payment_btn_pay_easypay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_payment_easypay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/act_payment_btn_pay_transfer"
                    app:layout_constraintTop_toTopOf="@+id/act_payment_btn_pay_card"  />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/act_payment_linear_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="23dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/act_store_text_reserveAddress">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/act_payment_btn_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_box_green_72"
                    android:gravity="center"
                    android:paddingVertical="11dp"
                    android:text="결제하기"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>