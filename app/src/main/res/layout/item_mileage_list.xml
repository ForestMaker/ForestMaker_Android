<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginVertical="20dp">

    <ImageView
        android:id="@+id/item_mileage_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/selector_mileage_use_or_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_mileage_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquare_extra_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1sp"
        android:text="100P"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/item_mileage_img"
        app:layout_constraintStart_toStartOf="@+id/item_mileage_img"
        app:layout_constraintTop_toBottomOf="@+id/item_mileage_img" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_mileage_img"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_mileage_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:lineSpacingExtra="5sp"
            android:layout_weight="8"
            android:text="2021.06.03 18:00~19:00"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/item_mileage_headcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:lineSpacingExtra="5sp"
            android:text="3명"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_mileage_img"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


        <TextView
            android:id="@+id/item_mileage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/apple_sd_gothic_neo_r"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:text="마곡나루역 근처 나무"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/item_mileage_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/apple_sd_gothic_neo_r"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:text="주소주소 - 1423"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>


    <View
        android:id="@+id/item_location_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mileage_mileage" />

</androidx.constraintlayout.widget.ConstraintLayout>