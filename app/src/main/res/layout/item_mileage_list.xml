<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginVertical="20dp">

    <ImageView
        android:id="@+id/item_mileage_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/selector_mileage_use_or_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_mileage_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquare_extra_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1sp"
        android:text="100P"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/item_mileage_img"
        app:layout_constraintStart_toStartOf="@+id/item_mileage_img"
        app:layout_constraintTop_toBottomOf="@+id/item_mileage_img" />

    <TextView
        android:id="@+id/item_mileage_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/notosans_regular"
        android:lineSpacingExtra="5sp"
        android:text="2021.06.03 18:00~19:00"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_mileage_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mileage_headcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/notosans_regular"
        android:lineSpacingExtra="5sp"
        android:text="3명"
        android:textColor="#4e4e4e"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_mileage_dateTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mileage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:lineSpacingExtra="3sp"
        android:text="마곡나루역 근처 나무"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/item_mileage_dateTime"
        app:layout_constraintTop_toBottomOf="@+id/item_mileage_dateTime" />

    <TextView
        android:id="@+id/item_mileage_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:lineSpacingExtra="3sp"
        android:text="주소주소 - 1423"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/item_mileage_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_mileage_name"
        app:layout_constraintTop_toTopOf="@+id/item_mileage_name" />


    <View
        android:id="@+id/item_location_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mileage_name" />

</androidx.constraintlayout.widget.ConstraintLayout>